
@model SiteYonetimi.Models.Entitiy.TBL_KATEGORI
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Kategori Ekleme Sayfası</h2>
<form class="form-group" method="post">

    <div style="margin-top:15px">
        <label>Yeni Kategori Adı</label>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control", @maxlength = "20" })
        <label>Yeni Kategori Durumu</label>

        @Html.TextBoxFor(y => y.DURUM, new { @class = "form-control", @maxlength = "20" })

        @*<input type="text" class="form-control" name="AD" />  ESKİ BİR YÖNTEMLE VERİ ÇEKME      *@
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">Kategori Ekle</button>
    </div>
</form>

