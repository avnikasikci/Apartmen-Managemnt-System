@model SiteYonetimi.Models.Entitiy.TBL_Gider

@{
    ViewBag.Title = "GiderEkle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>GiderEkle</h2>





<h2>Gider Ekleme Sayfası</h2>
<form class="form-group" method="post">

    <div style="margin-top:15px">
        <label>Adı</label>
        @Html.TextBoxFor(k => k.GiderAd, new { @class = "form-control", @maxlength = "50" })

    </div>
    <div style="margin-top:15px">
        <label>Kategorisi</label>
        @Html.DropDownListFor(k => k.TBL_KATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

    </div>

    <div style="margin-top:15px">
        <label>Gider Bilgisi</label>
        @Html.TextBoxFor(k => k.GiderBilgi, new { @class = "form-control", @maxlength = "250" })

    </div>
    <div style="margin-top:15px">
        <label>Tl</label>
        @Html.TextBoxFor(k => k.GiderTl, new { @class = "form-control", @maxlength = "50" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">Gider Ekle</button>
    </div>
    <input type="hidden" name="Durum" value="True" />
</form>



