@model SiteYonetimi.Models.Entitiy.TBL_Aidat
@{
    ViewBag.Title = "AidatGiris";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Aidat Girme İşlemi</h2>
<form class="form-group" method="post">

    <div style="margin-top:15px">
        <label>Üye</label>
        @* @Html.TextBoxFor(k => k.UYE, new { @class = "form-control" ,@maxlength="9"}) *@
        @Html.DropDownListFor(k => k.TBL_UYELER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Aidat Adı</label>
        @*@Html.TextBoxFor(k => k.KITAP, new { @class = "form-control", @maxlength = "9" })*@
        @Html.DropDownListFor(k => k.AidatAd, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel</label>
        @*@Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" ,@maxlength="2"})*@
        @*@Html.DropDownListFor(k => k.TBL_UYELER.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })*@
    </div>
    <div style="margin-top:15px">
        <label>Hesap Kesim Tarihi</label>
        <input type="text" class="form-control" name="KesimTarih" value="@DateTime.Now.ToShortDateString()" readonly="true" />
    </div>
    <div style="margin-top:15px">
        <label>Son Odeme Tarihi</label>
        <input type="text" class="form-control" name="SonÖdeme" value="@DateTime.Now.AddDays(30).ToShortDateString()" readonly="true" />
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#4800ff; color:white">Hesabı İşle</button>
        <input type="hidden" value="False" name="ISLEMDURUM" />
    </div>

</form>

