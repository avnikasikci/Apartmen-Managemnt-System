@model SiteYonetimi.Models.Entitiy.TBL_Gelir
@{ ViewBag.Title = "GelirGetir";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }


<h2>Gelir Güncelleme Sayfası</h2>
@using (Html.BeginForm("GelirGuncelle", "Gelir", FormMethod.Post))
{
<div style="margin-bottom:15px"></div>
                <div class="form-group">
                    <div style="margin-bottom:15px">
                        <label>ID</label>
                        @Html.TextBoxFor(k => k.İD, new { @class = "form-control", @readonly = "true" })
                    </div>
                    <div style="margin-bottom:15px">
                        <label>Gelir Adı</label>
                        @Html.TextBoxFor(k => k.GelirAd, new { @class = "form-control", @maxlength = "50" })
                    </div>
                    <div style="margin-bottom:15px">
                        <label>Kategorisi</label>
                        @Html.DropDownListFor(k => k.TBL_KATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
                    </div>

                    <div style="margin-bottom:15px">
                        <label>Gelir Tl</label>
                        @Html.TextBoxFor(k => k.GelirTl, new { @class = "form-control", @maxlength = "4" })
                    </div>


                    <button class="btn btn-warning">Gelir Bilgilerini Güncelle</button>
                    <input type="hidden" name="Durum" value="True" />
                </div>}


